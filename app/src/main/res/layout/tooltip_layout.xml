<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivUp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/tooltip_up"
        android:layout_gravity= "center"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tooltip_bg"
            android:layout_gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvName"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvDescription"
                android:layout_below="@+id/tvName"
                android:layout_alignLeft="@+id/tvLocation"
                android:layout_alignStart="@+id/tvLocation"
                android:textColor="#ffffff" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvLocation"
                android:layout_below="@+id/tvDescription"
                android:textColor="#ffffff" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvDateTime"
                android:layout_below="@+id/tvLocation"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvDateTimeEnd"
                android:layout_below="@+id/tvDateTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"
                android:paddingRight="5dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivDelete"
                android:layout_toRightOf="@+id/tvDateTime"
                android:layout_alignTop="@+id/ivEdit"
                android:padding="5dp"
                android:layout_below="@+id/tvDateTime" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivEdit"
                android:layout_toRightOf="@+id/ivDelete"
                android:layout_below="@+id/tvDateTime"
                android:padding="5dp"/>

        </RelativeLayout>
</LinearLayout>